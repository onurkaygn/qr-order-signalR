@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Category Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">List of Category</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can handle the category-related tasks below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Category Name</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.CategoryID</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Status</td>

                                        <td>@Html.ActionLink("Delete", "DeleteCategory", "Category", new { id = @item.CategoryID }, new { @class = "btn btn-danger" })</td>
                                        <td>@Html.ActionLink("Update", "UpdateCategory", "Category", new { id = @item.CategoryID }, new { @class = "btn btn-warning" })</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Category/CreateCategory" class="btn btn-outline-primary">Create a New Category</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
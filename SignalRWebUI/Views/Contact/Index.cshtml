@model List<ResultContactDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page Contact Information Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Contact List</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can handle the contact-related tasks below. You can only create one contact field.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Location</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">E-Mail</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ContactId</td>
                                        <td>@item.Location</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Mail</td>
                                        <td>@item.FooterDescription</td>
                                        <td>@Html.ActionLink("Delete", "DeleteContact", "Contact", new { id = @item.ContactId }, new { @class = "btn btn-danger" })</td>
                                        <td>@Html.ActionLink("Update", "UpdateContact", "Contact", new { id = @item.ContactId }, new { @class = "btn btn-warning" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact" class="btn btn-outline-primary">Create a New Contact Section</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model UpdateContactDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}




<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Home Page Contact Information Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Update Existing Contact Section</div>
                        </div>
                        <input type="hidden" asp-for="ContactId" />
                        <div class="card-body">
                            <div class="form-group">
                                <label for="location">Please Enter the Location of Contact Section</label>
                                <input type="text" class="form-control" asp-for="Location" id="location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="phone">Please Enter the Phone Number of Contact Us Section</label>
                                <textarea rows="5" class="form-control" asp-for="Phone" id="phone"></textarea>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="mail">Please Enter the E-Mail Address of the Contact Us Section</label>
                                <input type="email" class="form-control" asp-for="Mail" id="mail">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="description">Please Enter the Description  of Contact Us Section</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="description"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Add Contact Section</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

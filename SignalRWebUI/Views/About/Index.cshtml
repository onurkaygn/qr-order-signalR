@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">About Us Section Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">List of About Us</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can handle the about us related tasks below. You can only create one about us field.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AboutID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/About/DeleteAbout/@item.AboutID" class="btn btn-outline-danger">Delete</a></td>
                                        <td><a href="/About/UpdateAbout/@item.AboutID" class="btn btn-outline-warning">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/About/CreateAbout" class="btn btn-outline-primary">Create a New About Section</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
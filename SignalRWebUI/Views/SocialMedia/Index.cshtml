@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">SocialMedia Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">List of SocialMedia</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can handle the SocialMedia-related tasks below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Url</t h>
                                    <th scope="col">Icon</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>

                                        <td>@Html.ActionLink("Delete", "DeleteSocialMedia", "SocialMedia", new { id = @item.SocialMediaID }, new { @class = "btn btn-danger" })</td>
                                        <td>@Html.ActionLink("Update", "UpdateSocialMedia", "SocialMedia", new { id = @item.SocialMediaID }, new { @class = "btn btn-warning" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Create a New SocialMedia</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
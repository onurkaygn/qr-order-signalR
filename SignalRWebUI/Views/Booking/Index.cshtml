@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Booking Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">List of Booking</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            You can handle the booking-related tasks below.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name Surname</th>
                                    <th scope="col">Phone</th>
                                    <th scope="col">Number of People</th>
                                    <th scope="col">Reservation Date</th>
                                    <th scope="col">Reservation Status</th>
                                    <th scope="col">Delete</th>
                                    <th scope="col">Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>count</td>
                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.PersonCount</td>
                                        <td>@item.Date.ToString("dd.MM.yyyy")</td>
                                        <td>Reservation Accepted</td>
                                        <td>@Html.ActionLink("Delete", "DeleteBooking", "Booking", new { id = @item.BookingID }, new { @class = "btn btn-danger" })</td>
                                        <td>@Html.ActionLink("Update", "UpdateBooking", "Booking", new { id = @item.BookingID }, new { @class = "btn btn-warning" })</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Booking/CreateBooking" class="btn btn-outline-primary">Create a New Booking</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model CreateDiscountDto
@{
    ViewData["Title"] = "CreateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Discount Settings</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Add New Discount</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Discountname">Please Enter the Discount Name</label>
                                <input type="text" class="form-control" asp-for="Title" id="Discountname">
                            </div
                             <div class="card-body">
                            <div class="form-group">
                                <label for="Discountname">Please Enter the Discount Amount</label>
                                <input type="text" class="form-control" asp-for="Amount" id="Discountname">
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="Discountname">Please Enter the Discount Description</label>
                                <input type="text" class="form-control" asp-for="Description" id="Discountname">
                            </div>
                        </div>
                         <div class="card-body">
                            <div class="form-group">
                                <label for="Discountname">Please Upload the Discount Image</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="Discountname">
                            </div>
                        </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">Add Discount</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
